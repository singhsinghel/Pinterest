
<% if (success&& success.length) { %> 
    <div class="alert text-center fluid rounded-4 alert-light alert-dismissible fade show col-6 offset-3 mt-1" role="alert" style="position: absolute; top: 4rem; z-index: 2000; ">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="color: white !important;"></button>
    </div>

<% } %>
 
<% if (error&& error.length>0) { %> 
    <div class="alert text-center alert-dark alert-dismissible fade show col-6 offset-3 mt-1" role="alert" style="position: absolute; top: 4rem; z-index: 2000;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
 