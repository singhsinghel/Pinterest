    <!-- Scrollable modal -->
    <div class="modal fade" id="staticBackdrop-2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">Following</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="follower-container">
                <div class="owner-info d-flex justify-content-between align-items-center">
                  <% if (user.following.length>0) { %>
                  <% user.following.forEach(user1=>{%>
                    <div class="owner d-flex gap-2 align-items-center mt-3">
                            <div class="dp ">
                                <a href="/users/<%= user1._id %>/profile">  <img src="<%= user1.dp.url %>" class=" rounded-circle img-fluid " style="width: 3rem; height:3rem; object-fit: cover;" alt="..."></a>
                            </div>
                            <div class="name ">
                                 <p style="font-size: 0.75rem;" class="mt-3"><b>
                                      <%= user1.fullName %>
                            </div>
                    </div>
                    
                    <div class="follow">                  
                    <a href="/users/<%= user1._id %>/unfollow" class="btn btn-dark rounded-4 text-light">Following</a>
                    </div>
                 <% }) %>
                  <% } else{%>
                    <span class="fw-bold fs-5 ">Not following any account</span>
                    <% } %>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>