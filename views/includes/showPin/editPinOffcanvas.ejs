<div class="offcanvas custom-offcanvas offcanvas-end w-50" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
      <h3 class="offcanvas-title" id="offcanvasRightLabel">Edit Pin</h3>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="main d-flex flex-wrap row justify-content-center">
               <form method="post" action="/pins/<%= pin._id %>?_method=PUT" novalidate class="needs-validation">
                   <div class="inputContainer col-12">
                    <label for="title" class="mt-3 fs-6 secondary">Title</label>
                    <input class="form-control" type="text" value="<%= pin.title %>" name="title" id="title">
        
                    <label for="description" class="mt-3 fs-6 secondary">Description</label>
                    <textarea class="form-control" rows="3" type="text"  name="description" id="description"><%= pin.description %></textarea>
                    
                    <% if (user.boards.length>0 ) { %>
                    <label for="board" class="mt-3 small fs-6">Board</label>
                        <select name="board" class="form-select form-control" aria-label="Default select example">
                            <option value=""  selected>Select board</option>
                              <% user.boards.forEach(board=>{ %>
                                <option value="<%= board._id %>"><%= board.name %></option>
                              <%  }) %>
                          </select>
                    <% } %>
                    <div class="switch mt-3 ms-2">
                        <div class="form-check form-switch  ">
                          <input name="allowComments"
                            value="true"
                            <%= pin.allowComments? 'checked':'' %>
                            class="form-check-input "
                            type="checkbox" role="switch"
                            id="flexSwitchCheckDefault"
                            style="transform: scale(1.5);">
                          <label class="form-check-label ms-4" for="flexSwitchCheckDefault">Allow people to comment</label>
                        </div>
                      </div>
                    <button class="btn btn-danger mt-3" type="submit">Save</button>
                </form>
                <form method="post" action="/pins/<%= pin._id %>?_method=DELETE">
                <button class="btn btn-dark mt-3" type="submit">delete</button></form>
                  </div>
        </div>
    </div>
</div>
