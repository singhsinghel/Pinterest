<div class="owner-info d-flex justify-content-between align-items-center">
    <div class="owner d-flex gap-2 align-items-center mt-3">
            <div class="dp ">
                <a href="/users/<%= pin.createdBy._id %>/profile">  <img src="<%= pin.createdBy.dp.url %>" class=" rounded-circle img-fluid " style="width: 3rem; height:3rem; object-fit: cover;" alt="..."></a>
            </div>
            <div class="name ">
                 <p style="font-size: 0.75rem;" class="mt-3"><b>
                      <%= pin.createdBy.fullName %>
                   </b> <br>
                    <small class="small text-secondary"><%= pin.createdBy.followers.length %> followers</small> </p>
            </div>
    </div>
    <div class="follow">
        <% if (currUser._id.toString() !==pin.createdBy._id.toString()) { %>
            <% if (!isFollowing) { %>
                <a href="/users/<%= pin.createdBy._id %>/follow" class="btn btn-outline-light rounded-4 text-dark">Follow</a>
            <% } %>
             
            <% if (isFollowing) { %>
                <a href="/users/<%= pin.createdBy._id %>/unfollow" class="btn btn-dark rounded-4 text-light">Following</a>
            <% } %>
           <% } %>
    </div>
</div>